{
  "name": "glob-search",
  "version": "2.0.0",
  "description": "glob search from current cwd up to root or stopPath",
  "keywords": [
    "dir",
    "directory",
    "entry",
    "file",
    "find",
    "find-up",
    "findup",
    "folder",
    "glob",
    "json",
    "look",
    "look-up",
    "match",
    "npm",
    "package",
    "parent",
    "parents",
    "path",
    "pattern",
    "resolve",
    "root",
    "search",
    "up",
    "walk",
    "walking"
  ],
  "homepage": "https://github.com/bluelovers/glob-search#readme",
  "bugs": {
    "url": "https://github.com/bluelovers/glob-search/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluelovers/glob-search.git"
  },
  "license": "ISC",
  "author": "bluelovers",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "coverage": "npx nyc npm run test",
    "lint": "npx eslint **/*.ts",
    "test": "jest",
    "test:mocha": "npx mocha --require ts-node/register \"!(node_modules)/**/*.{test,spec}.{ts,tsx}\"",
    "npm:publish": "npm publish",
    "npm:publish:lerna": "npx lerna publish --yes --cd-version patch",
    "prepublish:lockfile": "npx sync-lockfile .",
    "prepublishOnly": "yarn run ncu && yarn run sort-package-json && yarn run test",
    "postpublish_": "git commit -m \"publish new version\" .",
    "ncu": "npx yarn-tool ncu -u",
    "sort-package-json": "npx yarn-tool sort",
    "tsc:default": "tsc -p tsconfig.json",
    "tsc:esm": "tsc -p tsconfig.esm.json"
  },
  "dependencies": {
    "@bluelovers/fast-glob": "^3.0.4",
    "@types/bluebird": "*",
    "@yarn-tool/find-root": "^1.0.10",
    "bluebird": "^3",
    "chai": "^4",
    "fs-extra": "^9",
    "pkg-dir": "^4",
    "string-natural-compare": "^3",
    "ts-type": "^1",
    "upath2": "^2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/fs-extra": "^9.0.1"
  }
}
